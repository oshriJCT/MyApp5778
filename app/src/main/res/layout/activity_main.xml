<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.coshri.myapp5778.controller.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addStudentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Student" />

        <Button
            android:id="@+id/addLecturerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Lecturer" />

        <Button
            android:id="@+id/addCourseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Course" />

        <Button
            android:id="@+id/addStudentCourseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add StudentCourse" />

        <Button
            android:id="@+id/showStudentListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Show Student List" />

        <Button
            android:id="@+id/showCourseListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Course List" />
    </LinearLayout>
</ScrollView>
